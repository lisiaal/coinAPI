{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <table id="assets" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
            {% for asset in assets %}
                <tr>
                    <td>
                        {{ asset.name }}
                    </td>
                    <td>
                        {{ asset.price ?? '-'}}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
